# make rules to generate MonetDB RPMs (works on Fedora, only)

rpmtopdir = $(shell cd @CMAKE_BINARY_DIR@ && pwd)/rpmbuild

RPMBUILDARGS = --define="_tmppath /tmp" --define="_topdir $(rpmtopdir)" --define="tmpdir %{_tmppath}" --define="rpmcflags -O2 " --define="packager MonetDB Database System <info@monetdb.org>" --define="_@LIBLAS_RPM@_lidar 1"

@CMAKE_BINARY_DIR@/@CPACK_SOURCE_PACKAGE_FILE_NAME@.tar.bz2:
	cpack -G TBZ2 --config @CMAKE_BINARY_DIR@/CPackSourceConfig.cmake

@CMAKE_BINARY_DIR@/@CPACK_SOURCE_PACKAGE_FILE_NAME@.tar.xz:
	cpack -G TXZ --config @CMAKE_BINARY_DIR@/CPackSourceConfig.cmake

$(rpmtopdir)/rpmmacros:
	mkdir -p $(rpmtopdir)/RPMS
	mkdir -p $(rpmtopdir)/SRPMS
	mkdir -p $(rpmtopdir)/SPECS
	mkdir -p $(rpmtopdir)/BUILD
	mkdir -p $(rpmtopdir)/INSTALL

rpm: @CMAKE_SOURCE_DIR@/MonetDB.spec @CMAKE_BINARY_DIR@/@CPACK_SOURCE_PACKAGE_FILE_NAME@.tar.bz2 $(rpmtopdir)/rpmmacros
	$(RPMBUILD) $(RPMBUILDARGS) --define="dist _@LINUX_DIST@" -ta --target `uname -m` --define="comp_cc @CMAKE_C_COMPILER@" @CMAKE_BINARY_DIR@/@CPACK_SOURCE_PACKAGE_FILE_NAME@.tar.bz2

srpm: @CMAKE_SOURCE_DIR@/MonetDB.spec @CMAKE_BINARY_DIR@/@CPACK_SOURCE_PACKAGE_FILE_NAME@.tar.bz2 $(rpmtopdir)/rpmmacros
	$(RPMBUILD) $(RPMBUILDARGS) --define="dist %{?undefined}" -ts @CMAKE_BINARY_DIR@/@CPACK_SOURCE_PACKAGE_FILE_NAME@.tar.bz2
